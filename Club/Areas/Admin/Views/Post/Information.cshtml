@{
    ViewBag.Title = "Information";
}
@model Post
<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <div style="clear:both;"></div>
            <div class="ch_divone">
                <b>帖子信息</b>
                <form class="form-horizontal" role="form" action="/Admin/Post/Information" method="post">
                    <input id="id" name="id" type="hidden" value="@Model.id" />
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> 标题 </label>
                        <div class="col-sm-9">
                            <input type="text" id="name" placeholder="标题" name="name" class="col-xs-10 col-sm-4" value="@Model.Title" disabled="disabled"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-3"> 发帖人 </label>
                        <div class="col-sm-9">
                            <input type="text" id="account" placeholder="发帖人" name="account" class="col-xs-10 col-sm-4" value="@Model.User.Name" disabled="disabled"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-select-1"> 帖子类型 </label>
                        <div class="col-sm-9">
                            @Html.DropDownList("typeid", new SelectList(ViewBag.type, "Value", "Text"), new { @class = " col-sm-4" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-4"> 状态 </label>
                        <div class="col-sm-9">
                            @Html.DropDownList("isfeaturedid", new SelectList(ViewBag.isfeatured, "Value", "Text"), new { @class = " col-sm-4" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label no-padding-right" for="form-field-5"> 发帖时间 </label>
                        <div class="col-sm-how">
                            <input type="text" id="image" placeholder="发帖时间" name="image" class="col-xs-10 col-sm-how" value="@Model.Time" disabled="disabled" />
                        </div>
                    </div>
                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" type="submit">
                                <i class="ace-icon fa fa-check bigger-110"></i>
                                提交
                            </button>
                            &nbsp; &nbsp; &nbsp;
                            <a href="/Admin/Post" class="btn">
                                <i class="ace-icon fa fa-undo bigger-110"></i>
                                返回
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- /.page-content --> 

