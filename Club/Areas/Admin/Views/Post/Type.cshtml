                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                </select>
                            </label>
                        </div>
                    </div>
                </div>
                @using (Html.BeginForm("Type", "Post", FormMethod.Get))
                {
                    <div id="articles">
                        @Html.Partial("_Type", Model)
                    </div>
                }

            </div>
        </div><!-- /.col -->
    </div><!-- /.row -->
</div><!-- /.page-content -->
