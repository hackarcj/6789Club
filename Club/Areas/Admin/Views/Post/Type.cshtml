
@{
    ViewBag.Title = "Type";
}
@using Webdiyer.WebControls.Mvc
@model PagedList<Club.Type>
<div class="page-content">

    <div class="page-header">
        <h1>
            帖子管理
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                类型管理
            </small>
        </h1>
    </div><!-- /.page-header -->
    <style>
    </style>
    <div class="row">
        <div class="col-xs-12">
            <div>
                <div class="row mt15">
                    <div class="col-xs-6">
                        <div class="dataTables_length" id="sample-table-2_length">
