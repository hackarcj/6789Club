@{
    Layout = null;
}
@using Webdiyer.WebControls.Mvc
@model PagedList<Post>
<table id="sample-table-5" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="center">
                <label class="position-relative">
                    <input type="checkbox" class="ace" />
                    <span class="lbl"></span>
                </label>
            </th>
            <th>标题</th>
            <th>发帖人</th>
            <th>帖子类型</th>
            <th>状态</th>
            <th>发帖时间</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                ViewBag.IsFeatured = "未审核";
                if (item.IsFeatured)
                {
                    ViewBag.IsFeatured = "已审核";
                }
                <tr>
                    <td class="center">
                        <label class="position-relative">
                            <input type="checkbox" class="ace" />
                            <span class="lbl"></span>
                        </label>
                    </td>
                    <td>@item.Title</td>
                    <td>@item.User.Name</td>
                    <td class="hidden-480">@item.Type.Name</td>
                    <td>@ViewBag.IsFeatured</td>
                    <td class="hidden-480">@item.Time</td>
                    <td>
                        <div class="hidden-sm hidden-xs action-buttons">
                            <a href="/Admin/Post/Information?id=@item.id">修改</a><a href="/Admin/Post/Edit?id=@item.id">删除</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@Ajax.Pager(Model, new PagerOptions
{
    AutoHide = false,
    PageIndexParameterName = "id",
    FirstPageText = "首页",
    PrevPageText = "上一页",
    NextPageText = "下一页",
    LastPageText = "末页",
    NumericPagerItemCount = 5,
    ContainerTagName = "ul",
    CssClass = "pagination",
    CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
    DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
    PagerItemTemplate = "<li>{0}</li>"
}, new MvcAjaxOptions
{
    UpdateTargetId = "articles",
})  
