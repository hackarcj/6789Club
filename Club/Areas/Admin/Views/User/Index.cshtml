@{
    ViewBag.Title = "UserIndex";
}
@using Webdiyer.WebControls.Mvc
@model PagedList<User>
<div class="page-content">

    <div class="page-header">
        <h1>
            用户管理
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
                用户列表
            </small>
        </h1>
    </div><!-- /.page-header -->
    <style>
    </style>
    <div class="row">
        <div class="col-xs-12">
            <div>
                <div class="row mt15">
                    <div class="col-xs-6">
                        <div class="dataTables_length" id="sample-table-2_length">
                            <a href="/Admin/User/Information" class="btn btn-sm btn-primary">添加</a>@*<button class="btn btn-sm btn-primary">修改</button>*@
                        </div>
                    </div>                    
                </div>
                <div class="row mt15">
                    <div class="col-xs-1">
                        <div class="dataTables_length" id="sample-table-2_length">
                            <label>
                                <select id="pagesize" name="sample-table-2_length" aria-controls="sample-table-2" class="form-control input-sm">
                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                </select>
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-2">
                        <div class="dataTables_length" id="sample-table-2_length">
                            <label>
                                <select id="isselect" name="sample-table-1_length" style="width:100px;" aria-controls="sample-table-2" class="form-control input-sm">
                                    <option value="0">全部</option>
                                    <option value="1">普通用户</option>
                                    <option value="2">俱乐部会员</option>
                                    <option value="4">管理员</option>
                                </select>
                            </label>
                        </div>
                    </div> 
                    <div class="ch_choose_top">
                        <div class="h_top_txt">
                            <input id="keyword" class="h_search_txt" name="kw" type="text" placeholder="请输入关键词" value="@ViewBag.KW">
                        </div>
                        <input id="search" class="h_button" type="submit" value="查询">
                        <div style="clear: both;"></div>
                    </div>
                </div>
                @using (Html.BeginForm("Index", "User", FormMethod.Get))
                {
                    <div id="articles">
                        @Html.Partial("_User", Model)
                    </div>
                }
            </div>
        </div><!-- /.col -->
    </div><!-- /.row -->

</div><!-- /.page-content -->
<script src="/Areas/Admin/Assets/scripts/jquery.unobtrusive-ajax.min.js"></script>
<script type="text/javascript">$(function () {@{ Ajax.LoadMvcPagerScript(); }});</script>