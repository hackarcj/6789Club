@{
    Layout = null;
}
@using Webdiyer.WebControls.Mvc
@model PagedList<User>
<table id="sample-table-4" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="center">
                <label class="position-relative">
                    <input type="checkbox" class="ace" />
                    <span class="lbl"></span>
                </label>
            </th>
            <th>用户名</th>
            <th>账号</th>
            <th>用户级别</th>
            <th>金币数量</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td class="center">
                        <label class="position-relative">
                            <input type="checkbox" class="ace" />
                            <span class="lbl"></span>
                        </label>
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Account</td>
                    <td class="hidden-480">@item.Level.Name</td>
                    <td>@item.Gold</td>
                    <td>
                        <div class="hidden-sm hidden-xs action-buttons">
                            <a href="/admin/user/Information?id=@item.id">修改</a><a href="~/User/Delete?id=@item.id">删除</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@Ajax.Pager(Model, new PagerOptions
{
    AutoHide = false,
    PageIndexParameterName = "id",
    FirstPageText = "首页",
    PrevPageText = "上一页",
    NextPageText = "下一页",
    LastPageText = "末页",
    NumericPagerItemCount = 5,
    ContainerTagName = "ul",
    CssClass = "pagination",
    CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
    DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
    PagerItemTemplate = "<li>{0}</li>"
}, new MvcAjaxOptions
{
    UpdateTargetId = "articles",
})               

