@{
    Layout = null;
}
@using Webdiyer.WebControls.Mvc
@model PagedList<Club.Models.ListPostModel>
@{
    foreach (var item in Model)
    {
        <ul class="pa-l-15">
            <li class="ux-w-100 bod-b-1 inline-flex f-wrap f-just-b ma-t-20 ma_list ma_list">
                <div class="ux-w-80">
                    <a class="left ma-r-15" href="#"><img class="uz-w-40 uz-h-40 bd-r-4" src="/Content/userimages/0.jpg"></a>
                    <div class="ma-l-15 ux-w-100">
                        <h5 class="ma-0 ma-t-2">@item.title</h5>
                        <p class="ma-t-6 f-s-10">@item.time</p>
                    </div>
                </div>
                <div>
                    <div class="f-c-gray uz-w-40 left">
                        <i class="iconfont icon-iconview"></i>
                        <div>@item.visit</div>
                    </div>
                    <div class="f-c-gray uz-w-40 left">
                        <i class="iconfont icon-iconview"></i>
                        <div>@item.relpy</div>
                    </div>
                </div>
            </li>
        </ul>
    }
}
@Ajax.Pager(Model, new PagerOptions
{
    AutoHide = false,
    PageIndexParameterName = "id",
    FirstPageText = "首页",
    PrevPageText = "上一页",
    NextPageText = "下一页",
    LastPageText = "末页",
    NumericPagerItemCount = 5,
    ContainerTagName = "ul",
    CssClass = "pagination",
    CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
    DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>",
    PagerItemTemplate = "<li>{0}</li>"
}, new MvcAjaxOptions
{
    UpdateTargetId = "articles",
})
